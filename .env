# LiveKit Server Configuration
LIVEKIT_URL=wss://your-server.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# Model Provider API Keys
OPENAI_API_KEY=sk-your_openai_key_here
DEEPGRAM_API_KEY=your_deepgram_key_here
CARTESIA_API_KEY=your_cartesia_key_here

# Interruption Handler Configuration
# Comma-separated list of words to ignore (filler words)
IGNORED_WORDS=uh,umm,hmm,haan,um,er,ah

# Minimum confidence threshold for speech recognition (0.0 to 1.0)
# Speech below this confidence will be ignored
CONFIDENCE_THRESHOLD=0.5

# Enable dynamic updates to the ignored words list at runtime
ENABLE_DYNAMIC_UPDATES=false

# Agent Behavior Configuration
# Minimum duration (in seconds) for speech to be considered an interruption
MIN_INTERRUPTION_DURATION=0.3

# Time (in seconds) to wait before resuming agent speech after a false interruption
FALSE_INTERRUPTION_TIMEOUT=1.5

# Whether to resume agent speech after detecting a false interruption
RESUME_FALSE_INTERRUPTION=true
