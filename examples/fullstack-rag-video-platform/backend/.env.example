# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo
LLM_TEMPERATURE=0.7

# OpenAI API Key (required for OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (if using Anthropic)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Key (if using Google)
# GOOGLE_API_KEY=your_google_api_key_here

# STT Configuration
STT_PROVIDER=deepgram
STT_LANGUAGE=en

# Deepgram API Key (required for Deepgram STT)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# TTS Configuration
TTS_PROVIDER=elevenlabs
TTS_VOICE=Rachel

# ElevenLabs API Key (required for ElevenLabs TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# RAG Configuration
EMBEDDING_MODEL=text-embedding-3-large
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K=5

# Vector Database Configuration
VECTOR_DB_TYPE=local
# VECTOR_DB_URL=http://localhost:6333  # For Qdrant
# QDRANT_API_KEY=your_qdrant_api_key  # If using Qdrant Cloud

# Memory Configuration
MEMORY_DB_PATH=./data/memory.db
MEMORY_WINDOW=10
LONG_TERM_MEMORY=true

# Video Configuration
ENABLE_VIDEO=true
AVATAR_PROVIDER=simli
VIDEO_FPS=30
VIDEO_QUALITY=high

# Avatar Provider API Keys (configure based on your provider)
# SIMLI_API_KEY=your_simli_api_key
# TAVUS_API_KEY=your_tavus_api_key
# HEDRA_API_KEY=your_hedra_api_key

# Performance Configuration
MAX_CONCURRENT_SESSIONS=100
ENABLE_CACHING=true
CACHE_TTL=3600

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TELEMETRY=true
METRICS_PORT=9090

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage Configuration
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=52428800
ALLOWED_FILE_TYPES=.pdf,.txt,.md,.docx,.pptx

# Security Configuration
ENABLE_AUTH=false
JWT_SECRET=change-this-secret-in-production
JWT_EXPIRY=86400
